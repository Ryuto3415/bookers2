
<!-- form_with部分 -->
<%= form_with model: Book.new, method: :post do |f| %>
<div class="form-group">
  <label>Title</label>
  <%= f.text_field :title, class:"form-control" %>
</div>
<div class="form-group">
  <label>Opinion</label>
  <%= f.text_area :body, class:"form-control" %>
</div>
<div class="form-group">
  <%= f.submit 'Create Book', class:"btn btn-success" %>
</div>
<% end %>
